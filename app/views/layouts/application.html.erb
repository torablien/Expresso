<!DOCTYPE html>
<html>
<head>
  <title>Expresso - Coffee Delivery</title>
  <meta charset="utf-8" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header id="header">
				<h1><a href="/">Expresso</a></h1>
				<% if @isLoggedIn %>
						<%= @currUserDisplay %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<% end %>
				<a href="#nav">Menu</a>
			</header>

			<nav id="nav">
				<ul class="links">
					<li><a href="/">Home</a></li>
					<% if not @isLoggedIn %>
					<li><a href="/auth/facebook">Login</a></li>
					<% else %>
					<li><a href="/logout">logout</a></li>
					<li><a href="/orders">Orders</a></li>
					<li><a href="/users">Users</a></li>
					<li><a href="/drivers">Drivers</a></li>
					<% end %>
				</ul>
			</nav>

<%= yield %>

<%= javascript_include_tag 'jquery.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'skel.min', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'util', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'main', 'data-turbolinks-track' => true %>

</body>
</html>

